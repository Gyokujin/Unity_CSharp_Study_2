using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Continue : MonoBehaviour
{
    void Start()
    {
        // continue : 반복문 내의 이후의 함수를 생략하고 반복문의 처음 지점으로 돌아간다.
        for (int i = 0; i < 5; i++)
        {
            if (i == 2)
            {
                continue; // 아래의 코드를 생략하고 처음으로 돌아간다. i의 값은 2에서 3으로 넘어간다.
            }

            Debug.Log(i); // 0, 1, 3, 4
        }
    }
}
