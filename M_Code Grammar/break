using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Break : MonoBehaviour
{
    void Start()
    {
        int n = 0;

        // break : 반복문을 종료하여 빠져 나올때 사용한다.
        while (true)
        {
            n++;
            Debug.Log(n);

            if (n == 10)
            {
                break; // 반복문을 종료하게 된다.
            }
        }
    }
}
